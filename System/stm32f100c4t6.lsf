}

SECTIONS
{
/* ��������� ������������ � flash */
	.text :
	{
	  . = ALIGN(4); /* "." - ������� ����c + ����������� ������ �� 4 ����� */
	  KEEP(*(.interrupt_vector)) /* ���� ���������� ������� ���������� */
