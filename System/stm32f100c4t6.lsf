	  _data_end = .;
	} > ram

/* ����������, �������� ������� ����� = 0 */
	.bss :
	{
	  . = ALIGN(4);
	  _bss_begin = .;
	  _bss_start__ = _bss_begin;
	  *(.bss)
	  *(.bss*)
	  *(COMMON)
	  . = ALIGN(4);
	  _bss_end = .;
	  __bss_end__ = _bss_end;
	} > ram

/* ���� */
	_stack_size = 200;
	_stack_end = 0x20000000 + 20K; 
	_stack_begin = _stack_end - _stack_size;
	
	. = _stack_begin;
	._stack :
	{
	  . = . + _stack_size;
  	} > ram
}

